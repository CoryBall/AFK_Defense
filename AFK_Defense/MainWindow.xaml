<Window x:Name="Main" x:Class="AFK_Defense.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AFK_Defense"
        mc:Ignorable="d"
        Title="Anti-AFK" Height="250" Width="250" WindowStyle="SingleBorderWindow" Background="#FF403F3F">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="157*"/>
            <ColumnDefinition Width="93*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnAction" Content="AFK" HorizontalAlignment="Left" Margin="61,157,0,0" VerticalAlignment="Top" Height="40" Width="128" FontSize="18" FontWeight="Normal" Click="BtnAction_Click" Grid.ColumnSpan="2" Foreground="#FF3E3E3E" Background="White"/>
        <Label x:Name="lblCurrently" Content="Currently:" HorizontalAlignment="Left" Margin="36,19,0,0" VerticalAlignment="Top" Height="25" Width="78" Foreground="White"/>
        <Label x:Name="lblStatus" Content="Playing" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="51" Margin="61,66,0,0" VerticalAlignment="Top" Width="128" FontSize="32" FontWeight="SemiBold" Grid.ColumnSpan="2" Foreground="White"/>
    </Grid>
</Window>
